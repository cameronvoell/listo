<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
        android:id="@+id/mainPrompt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginTop="96dp"
        android:textAlignment="center"
        android:textSize="32sp"
        android:layout_alignParentTop="true"
        android:text="sample word"/>

    <Button
        android:id="@+id/showSentence"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/mainPrompt"
        android:layout_marginTop="48dp"
        android:text="show hint"
        android:visibility="gone"
        android:onClick="showSentence"/>

    <TextView
        android:id="@+id/sentenceHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_marginTop="36dp"
        android:layout_below="@id/showSentence"
        android:background="@android:color/white"
        android:layout_centerHorizontal="true"
        android:textSize="24dp"
        android:visibility="gone"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="flip card!"
        android:onClick="flipCard"/>



</RelativeLayout>